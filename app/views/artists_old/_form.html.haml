= form_for @artist do |f|
  -if @artist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@artist.errors.count, "error")} prohibited this artist from being saved:"
      %ul
        - @artist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name_first
    = f.text_field :name_first
  .field
    = f.label :name_mi
    = f.text_field :name_mi
  .field
    = f.label :name_last
    = f.text_field :name_last
  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :image_url
    = f.text_field :image_url
  .actions
    = f.submit 'Save'
